<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <fieldset>
      <h2>Log In</h2>

      <%= form_tag sessions_path, :id => 'new_session_form', :role => 'form' do %>
        <div class="form-group">
          <%= text_field_tag :email, params[:email], :placeholder => 'Your Email Address', :tabindex => 1, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= password_field_tag :password, nil, :placeholder => 'Your Password', :tabindex => 2, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= submit_tag "Log In", :tabindex => 3, :class => "btn btn-default btn-primary" %>
          <%= link_to "Forgot Password?", new_password_reset_path, :tabindex => 4, :class => "pull-right" %>
        </div>
      <% end %>
    </fieldset>
    <a class="btn btn-block btn-social btn-github" href="/auth/github">
      <i class="fa fa-github"></i>
      Sign in with GitHub
    </a>
  </div>
</div>
