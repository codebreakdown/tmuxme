<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <fieldset>
      <h2>Reset Password</h2>
      <%= form_for @user, :url => password_reset_path(params[:id], :html => { :role => 'form' }) do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.password_field :password, :placeholder => "New Password", :tabindex => 1, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, :placeholder => "New Password Confirmation", :tabindex => 2, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Password", :tabindex => 3, :class => "btn btn-default btn-primary" %>
        </div>
      <% end %>
    </fieldset>
  </div>
</div>
